{
    "version": "2.0.0",
    "windows": {
        "options": {
          "shell": {
            "executable": "cmd.exe",
            "args": [
              "/C",
              // The path to VsDevCmd.bat depends on the version of Visual Studio you have installed.
              //"\"C:/Program Files (x86)/Microsoft Visual Studio/2019/Community/Common7/Tools/VsDevCmd.bat\"",
              "\"C:/Program Files/Microsoft Visual Studio/2022/Community/Common7/Tools/VsDevCmd.bat\"",
              "&&"
            ]
          }
        }
    },
    "tasks": [
        {
            "label": "linux-x64-build", // 构建整个工程
            "type": "process",
            "command": "./linux-x64.sh",
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "android-arm64-build", // 构建整个工程
            "type": "process",
            "command": "./android-arm64-build.sh",
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "android-arm32-build", // 构建整个工程
            "type": "process",
            "command": "./android-arm32-build.sh",
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "cmake clean", // 清理cmake缓存
            "type": "process",
            "command": "rm",
            "args": [
                "CMakeCache.txt"
            ],
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}/build/linux-x64"
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "make", // 执行make，编译出二进制
            "type": "process",
            "command": "make",
            "args": [
                "-j4"
            ],
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}/build/linux-x64"
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "make clean", // 执行make，编译出二进制
            "type": "process",
            "command": "make clean",
            "args": [
                "-j4"
            ],
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}/build/linux-x64"
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "run", // 运行程序；调试程序在launch.json里配置
            "type": "shell",
            "command": "./testbed",
            "options": {
                "cwd": "${workspaceFolder}/build/linux-x64"
            },
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "compile single C",
            "type": "shell",
            "command": "gcc a.c -g",
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "compile single C++",
            "type": "shell",
            "command": "g++ a.c -g",
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "type": "shell",
            "label": "cl.exe build active file",
            "command": "cl.exe",
            "args": [
              "/Zi",
              "/EHsc",
              "/Fe:",
              "${fileDirname}\\${fileBasenameNoExtension}.exe",
              "${file}"
            ],
            "problemMatcher": ["$msCompile"],
            "group": {
              "kind": "build",
              "isDefault": true
            }
        },
        {
            "label": "vs2022-x64 build with cmake",
            "type": "process",
            "command": "./vs2022-x64.cmd",
            "group": {
                "kind": "build",
            },
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "problemMatcher": [
                "$msCompile"
            ]
        },
    ]
}